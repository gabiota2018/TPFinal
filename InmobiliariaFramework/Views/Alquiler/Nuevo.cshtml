
@model InmobiliariaFramework.Models.ViewModel.AlquilerViewModel
@{
    ViewBag.Title = "";
}
<h2>Nuevo Contrato</h2>

<form>
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(d => d.Precio)
            @Html.TextBoxFor(d => d.Precio, new { id = "Precio" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.Fecha_inicio)
            @Html.TextBoxFor(d => d.Fecha_inicio, new { id = "Fecha_inicio" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.Fecha_fin)
            @Html.TextBoxFor(d => d.Fecha_fin, new { id = "Fecha_fin" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.IdInquilino)
            @Html.TextBoxFor(d => d.IdInquilino, new { id = "IdInquilino" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.IdInmueble)
            @Html.TextBoxFor(d => d.IdInmueble, new { id = "IdInmueble" })
        </div>
        
        <input type="button" value="Guardar" onclick="jsAdd()" />
    </div>
</form>
<script>
    var url = "@Url.Content("~/Alquiler/Save")";
    function jsAdd() {
        fetch(url, {
            method: "POST",
            body: JSON.stringify({
                Precio: document.getElementById("Precio").value,
                Fecha_inicio: document.getElementById("Fecha_inicio").value,
                Fecha_fin:document.getElementById("Fecha_fin").value,
                IdInquilino:document.getElementById("IdInquilino").value,
                IdInmueble:document.getElementById("IdInmueble").value
          }),
            headers: {
                'Acept': "application/json",
                "Content-Type":"application/json"
            }
        }).then(function (response) {
            if (response.ok)
                return response.text()
            else
                alert("Error");
        }).then(function (Data) {
            if (Data != 1) {
                alert(Data)
            }
            else {
                document.location.href = "@Url.Content("~/Alquiler/")";
            }
        })
    }
</script>


