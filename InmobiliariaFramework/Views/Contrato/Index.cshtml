
@{
    ViewBag.Title = "Nuevo Contrato";
}

<h2>@ViewBag.Title</h2>
<input type="button" value="Refrescar" onclick="Get()">
<div id="divLista" style="border:1px solid #999;">
</div>

<script>
    urlGet = "@Url.Content("~/Contrato/List")";
    Get();
    function Get() {
        fetch(urlGet)
            .then(function (response) {
                return response.text();
            })
            .then((data) => {
                document.getElementById("divLista").innerHTML = data;
            })
    }

    //eliminar
    function jsDelete(Id) {
       fetch("@Url.Content("~/Contrato/Delete")", {
            method: "POST",
           body: JSON.stringify({
               Id: Id
            }),
            headers: {
                'Acept': "application/json",
                "Content-Type":"application/json"
            }
        }).then(function (response) {
            if (response.ok)
                return response.text()
            else
                alert("Error");
        }).then(function (Data) {
            if (Data != 1) {
                alert(Data)
            }
            else {
               Get();
            }
        })
    }

</script>